<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.Material3.CardView.Elevated"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/big_padding">

    <st.slex.messenger.main.ui.core.CustomImageView
        android:id="@+id/avatarImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:cropToPadding="true"
        tools:src="@drawable/ic_default_photo" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@color/blue_gray_200"
        android:orientation="vertical"
        android:padding="4dp"
        android:paddingStart="@dimen/primary_padding">

        <st.slex.messenger.main.ui.core.CustomTextView
            android:id="@+id/usernameTextView"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLength="15"
            android:maxLines="1"
            tools:text="UserName" />

        <st.slex.messenger.main.ui.core.CustomTextView
            android:id="@+id/phoneTextView"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            tools:text="PhoneNumber" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/SHOW_PROGRESS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</com.google.android.material.card.MaterialCardView>