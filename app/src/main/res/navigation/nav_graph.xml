<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.st.slex.common.messenger.main_screen.MainFragment"
        android:label="Main screen"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_nav_home_to_nav_user_profile"
            app:destination="@id/nav_user_profile" />
    </fragment>
    <fragment
        android:id="@+id/nav_enter_phone"
        android:name="com.st.slex.common.messenger.auth.EnterPhoneFragment"
        android:label="Sign In"
        tools:layout="@layout/fragment_enter_phone" >
        <action
            android:id="@+id/action_nav_enter_phone_to_nav_enter_code"
            app:destination="@id/nav_enter_code" />
    </fragment>
    <fragment
        android:id="@+id/nav_enter_code"
        android:name="com.st.slex.common.messenger.auth.EnterCodeFragment"
        android:label="Enter Code"
        tools:layout="@layout/fragment_enter_code" >

        <argument
            android:name="PhoneNumber"
            app:argType="string"/>

    </fragment>
    <fragment
        android:id="@+id/nav_user_profile"
        android:name="com.st.slex.common.messenger.user_profile.UserProfileFragment"
        android:label="fragment_user_profile"
        tools:layout="@layout/fragment_user_profile" />

</navigation>