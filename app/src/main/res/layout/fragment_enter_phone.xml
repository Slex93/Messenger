<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="st.slex.messenger.ui.auth.EnterPhoneFragment">

    <st.slex.messenger.ui.auth.phone.PhoneTextInputLayout
        android:id="@+id/fragment_phone_input"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/big_padding"
        android:hint="@string/hint_phone_number"
        app:phone_showFlag="false"
        app:startIconDrawable="@drawable/ic_baseline_call_24">

        <st.slex.messenger.ui.auth.phone.PhoneTextInputEditText
            android:id="@+id/phoneEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </st.slex.messenger.ui.auth.phone.PhoneTextInputLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fragment_phone_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/primary_padding"
        android:contentDescription="@string/next_step"
        android:enabled="false"
        android:src="@drawable/ic_next_step"
        android:transitionName="activity_trans" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/fragment_code_progress_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="@dimen/big_padding"
        android:indeterminate="true"
        android:visibility="gone"
        tools:visibility="visible" />
</FrameLayout>